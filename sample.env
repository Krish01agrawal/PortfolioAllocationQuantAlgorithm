# ====================================
# PLUTOMONEY QUANT - ENVIRONMENT VARIABLES
# ====================================
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/plutomoney_quant

# OR for MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/plutomoney_quant?retryWrites=true&w=majority

# Logging
LOG_LEVEL=debug

# ==================================
# MORNINGSTAR API CONFIGURATION
# ==================================
# Data source for mutual fund information
MORNINGSTAR_API_URL=https://api.morningstar.com/v1
MORNINGSTAR_API_KEY=your_morningstar_api_key_here
MORNINGSTAR_TIMEOUT=30000
MORNINGSTAR_MAX_RETRIES=3

# ==================================
# CRON JOB CONFIGURATION
# ==================================
# Enable/disable scheduled data ingestion
CRON_ENABLED=true
CRON_TIMEZONE=Asia/Kolkata

# ==================================
# DATA INGESTION SETTINGS
# ==================================
MAX_BATCH_SIZE=500
ENABLE_OUTLIER_DETECTION=true

# ==================================
# SCORING ENGINE (Phase 2)
# ==================================
# To be configured when implementing Collections 3 & 4
# Z_SCORE_THRESHOLD=3.0
# MIN_FUNDS_PER_CATEGORY=3

# ==================================
# BSE STAR MFD API (Phase 3)
# ==================================
# For actual fund transactions (future)
# BSE_API_URL=https://bsestarmf.in/api/v1
# BSE_CLIENT_ID=your_client_id
# BSE_API_KEY=your_api_key

# ==================================
# ALERTING & MONITORING (Future)
# ==================================
# ALERT_EMAIL=admin@plutomoney.com
# ALERT_THRESHOLD=0.1
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx
# SENTRY_DSN=https://xxx@sentry.io/xxx

